<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgAnhAlbum"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="200dp"></ImageView>

        <TextView
            android:id="@+id/txtTenAlbum"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="Tên Album"
            android:layout_margin="5dp"
            android:layout_below="@id/imgAnhAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTencaSi"
            android:textColor="#736D6D"
            android:text="Tên ca sĩ"
            android:textSize="16sp"
            android:layout_below="@id/txtTenAlbum"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>