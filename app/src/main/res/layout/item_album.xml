<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#8F8A8A"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_margin="5dp"
        android:layout_width="195dp"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgAnhAlbum"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="150dp"></ImageView>

        <TextView
            android:id="@+id/txtTenAlbum"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Tên Album"
            android:layout_margin="3dp"
            android:layout_below="@id/imgAnhAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTencaSi"
            android:textColor="#736D6D"
            android:text="Tên ca sĩ"
            android:textSize="13sp"
            android:layout_below="@id/txtTenAlbum"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>